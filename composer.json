{
  "name": "auxmoney/opentracing-bundle-guzzle",
  "type": "symfony-bundle",
  "license": "MIT",
  "require": {
    "php": "^7.1.13",
    "auxmoney/opentracing-bundle-core": "dev-initial-release",
    "guzzlehttp/guzzle": "^6.0"
  },
  "minimum-stability": "dev",
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^7.5",
    "phpstan/phpstan": "^0.12",
    "squizlabs/php_codesniffer": "^3.5",
    "phpmd/phpmd": "^2.7"
  },
  "autoload": {
    "psr-4": {
      "Auxmoney\\OpentracingBundleGuzzle\\": "./"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Auxmoney\\OpentracingBundleGuzzle\\Tests\\": "./Tests/"
    }
  },
  "scripts": {
    "quality": [
      "@phpcs",
      "@phpmd",
      "@phpstan",
      "@phpunit"
    ],
    "phpmd": "vendor/bin/phpmd . text cleancode,codesize,controversial,design,naming,unusedcode --exclude vendor,Tests",
    "phpcs": "vendor/bin/phpcs",
    "phpunit": "phpdbg -qrr vendor/bin/phpunit --colors=never",
    "phpstan": "vendor/bin/phpstan analyse --no-progress"
  }
}
